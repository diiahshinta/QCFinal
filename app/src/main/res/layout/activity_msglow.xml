<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_msglow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#15ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/txt_nama_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="MSGLOW"/>
                <TextView
                    android:id="@+id/txt_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/txt_nama_produk"
                    android:text="John Doe"/>

                <TextView
                    android:id="@+id/sku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_barcode"
                    android:text="SKU"/>
                <TextView
                    android:id="@+id/titik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/txt_barcode"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_sku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/txt_barcode"
                    android:text=""/>

                <TextView
                    android:id="@+id/nie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sku"
                    android:layout_alignParentLeft="true"
                    android:text="NIE" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/sku"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_nie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/sku"
                    android:text=""/>
                <TextView
                    android:id="@+id/parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nie"
                    android:layout_alignParentLeft="true"
                    android:text="Parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/nie"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/nie"
                    android:text=""/>

                <TextView
                    android:id="@+id/md"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent"
                    android:layout_alignParentLeft="true"
                    android:text="Make Date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/parent"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_md"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/parent"
                    android:text=""/>
                <TextView
                    android:id="@+id/ed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/md"
                    android:layout_alignParentLeft="true"
                    android:text="Expired Date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/md"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_ed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/md"
                    android:text=""/>

                <TextView
                    android:id="@+id/batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ed"
                    android:layout_alignParentLeft="true"
                    android:text="Batch" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/ed"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/ed"
                    android:text=""/>
                <TextView
                    android:id="@+id/sjp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batch"
                    android:layout_alignParentLeft="true"
                    android:text="SJP" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/batch"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_sjp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/batch"
                    android:text=""/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sjp"
                    android:layout_alignParentLeft="true"
                    android:text="Total Pcs" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_toRightOf="@+id/ed"
                    android:layout_below="@+id/sjp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/titik"
                    android:layout_below="@+id/sjp"
                    android:text=""/>

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            tools:listitem="@layout/item_msglow"
            app:layout_constraintTop_toBottomOf="@id/layout_data"
            android:id="@+id/rv_list"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
